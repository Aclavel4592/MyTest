      <%= image_tag "balade-dogours.png", class:"picture-definition" %>
      <%= image_tag "perdu-dogours.png", class:"picture-definition" %>
      <%= image_tag "dash-dogours.png", class:"picture-definition" %>
    </div>
  </section>
